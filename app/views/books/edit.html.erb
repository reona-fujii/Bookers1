<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <div id = "error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model:@book , local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
<div class = "botan">
  <%= link_to 'Show', book_path(@book) %>
  <%= link_to 'Back', books_path %>
</div>
