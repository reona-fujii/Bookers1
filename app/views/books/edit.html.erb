<h2>Editing Book</h2>
 <% if @book.errors.any? %>
  <div id = "error_explanation" class="alert">
    <h4><%= pluralize(@book.errors.count, "error") %>ã€€prohibited this product from being saved:</h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class = "edit-main">
  <%= form_with model:@book , local:true do |f| %>
    <div class = "field">    
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class = "field">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>
    <div class = "submit">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
  <div class = "botan">
    <%= link_to 'Show', book_path(@book) %>
    <h4>|</h4>
    <%= link_to 'Back', books_path %>
  </div>
</div>
