<h2>Books</h2>
<div class = "main-content">
  <div class = "content-category">
    <h4>title</h4>
    <h4>body</h4>
  </div>
  <div class = "main">
    <% @books.each do |book| %>
      <div class = "content">
        <div class = "content-title">
          <%= book.title %>
        </div>
        <div class = "content-body">
          <%= book.body %>
        </div>
        <div class = "content-do">
          <%= link_to 'Show', book_path(book) %>
          <%= link_to 'Edit', edit_book_path(book) %>
          <%= link_to 'Destroy', book_path(book), method: :delete, "data-comfirm" => "本当に削除しますか？" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>